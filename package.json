{
  "name": "orbit-db",
  "version": "1.0.0",
  "description": "Distributed p2p database on IPFS",
  "author": "Haad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/orbitdb/orbit-db"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "browser": {
    "fs-pull-blob-store": "idb-pull-blob-store"
  },
  "main": "src/OrbitDB.js",
  "dependencies": {
    "logplease": "^1.2.14",
    "multihashes": "^0.4.9",
    "orbit-db-cache": "~0.0.7",
    "orbit-db-counterstore": "github:orbitdb/orbit-db-counterstore#feat/cli",
    "orbit-db-docstore": "github:orbitdb/orbit-db-docstore#feat/cli",
    "orbit-db-eventstore": "github:orbitdb/orbit-db-eventstore#feat/cli",
    "orbit-db-feedstore": "github:orbitdb/orbit-db-feedstore#feat/cli",
    "orbit-db-keystore": "haadcode/orbit-db-keystore",
    "orbit-db-kvstore": "github:orbitdb/orbit-db-kvstore#feat/cli",
    "orbit-db-pubsub": "github:orbitdb/orbit-db-pubsub",
    "orbit-db-store": "github:orbitdb/orbit-db-store#feat/write-access"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chance": "^1.0.11",
    "datastore-level": "^0.6.0",
    "ipfs": "~0.25.4",
    "ipfs-repo": "^0.17.0",
    "json-loader": "^0.5.7",
    "mocha": "^3.5.3",
    "p-each-series": "^1.0.0",
    "p-map-series": "^1.0.0",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.2",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "examples": "npm run examples:node",
    "examples:node": "node examples/eventlog.js",
    "examples:browser": "open examples/browser/index.html && LOG=debug node examples/start-daemon.js",
    "test": "mocha",
    "build": "npm run build:examples && npm run build:dist",
    "build:examples": "webpack --config conf/webpack.example.config.js --sort-modules-by size",
    "build:dist": "webpack --config conf/webpack.config.js --sort-modules-by size"
  }
}
